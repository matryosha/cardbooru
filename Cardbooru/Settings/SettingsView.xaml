<UserControl x:Class="Cardbooru.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cardbooru.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:helpers="clr-namespace:Cardbooru.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="dataFromEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="helpers:BooruType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Hamburger button-->
        <Canvas>
            <Viewbox Width="25" Height="20" Canvas.Left="10" Canvas.Top="10">
                <i:Interaction.Triggers>
                    <!--In the begining I use just event in ItemContainerStyle but it caused ui freezing-->
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}">
                        </i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Canvas Width="25" Height="20">
                    <Canvas.Style>
                        <Style TargetType="Canvas">
                            <Setter Property="Opacity" Value="0.3"></Setter>
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <EventTrigger.Actions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation 
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0.7" Duration="0:0:0.5"
                                                                 FillBehavior="HoldEnd"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger.Actions>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation 
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.3" Duration="0:0:0.5"
                                                             FillBehavior="HoldEnd"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Canvas.Style>
                    <Canvas.Background>
                        <SolidColorBrush Opacity="0"></SolidColorBrush>
                    </Canvas.Background>
                    <Path  Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z" Fill="#9E9E9E"  Width="25" Height="20" Stretch="Uniform"  />
                </Canvas>
            </Viewbox>
        </Canvas>
        
        <StackPanel Grid.Column="0" Margin="20 50">
            <Viewbox Height="30" HorizontalAlignment="Left">
                <TextBlock FontSize="20">Current site</TextBlock>
            </Viewbox>
            <Viewbox Height="30" HorizontalAlignment="Left" Margin="0 10 0 0">
                <ComboBox Width="150"
                          ItemsSource="{Binding Source={StaticResource dataFromEnum}}"
                          SelectedItem="{Binding Path = CurrentSite, Mode=TwoWay}">

                </ComboBox>
            </Viewbox>
            
        </StackPanel>
       
    </Grid>
</UserControl>
